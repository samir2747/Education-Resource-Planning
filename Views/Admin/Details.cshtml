@model InstitudeManagementSystem.Models.Addmission

@{
    ViewData["Title"] = "Details";
}

<div class="card-header bg-success text-white text-center">
    <h1 class="display-4 text-white" style="font-weight: 650;">ADMISSION DETAILS</h1>
    <p class="text-white fw-bold">View and Confirm Your Admission Information</p>
</div>

<div class="d-flex justify-content-center mt-4">
    <div class="col-md-8">
        <!-- Student Information -->
        <h5 class="text-success font-weight-bold mb-3 text-uppercase">Student Information</h5>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label fw-bold">Student Name</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.Name)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Gender</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.Gender)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Date of Birth</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.Dob)</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label fw-bold">Contact No</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.ContactNo)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Email</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.Email)</p>
                </div>
            </div>
        </div>

        <!-- Parent Information -->
        <h5 class="text-success font-weight-bold mt-5 mb-3 text-uppercase">Parent Information</h5>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label fw-bold">Parent Name</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.ParentName)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Parent Contact No</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.ParentContactNo)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Permanent Address</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.PermanentAddress)</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label fw-bold">Current Address</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.CurrentAddress)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">City</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.City)</p>
                </div>
            </div>
        </div>

        <!-- Payment Information -->
        <h5 class="text-success font-weight-bold mt-5 mb-3 text-uppercase">Payment Information</h5>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label fw-bold">Registration Fees</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.RegistrationFees)/-</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Course Fees</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.CourseFees)/-</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Discount %</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.Discount)%</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Discounted Course Fees</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.DiscountedFees)/-</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label fw-bold">Payment Mode</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.PaymentMode)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Transaction ID</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.TransactionId)/-</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Remark For Discount</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.DiscountRemark)</p>
                </div>
            </div>
        </div>

        <!-- Academic Information -->
        <h5 class="text-success font-weight-bold mt-5 mb-3 text-uppercase">Academic Information</h5>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label fw-bold">Qualification</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.Qualification)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Previous School/College</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.PreviousSchoolClg)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Marks</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.Marks)%</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Course</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.Course)</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label fw-bold">Front-End</label>
                    <p class="form-control-static">@Model.FrontEnd</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Back-End</label>
                    <p class="form-control-static">@Model.BackEnd</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Database Language</label>
                    <p class="form-control-static">@Model.DataBaselanguage</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Admission Date</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.AddmissionDate)</p>
                </div>
            </div>
        </div>

        <!-- Installment Details -->
        <h5 class="text-success font-weight-bold mt-5 mb-3 text-uppercase">Installment Details</h5>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="table-secondary">
                            <tr>
                                <th>Installment</th>
                                <th>Amount</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody class="fw-bold">
                            <tr>
                                <td>First</td>
                                <td class="text-success">@Html.DisplayFor(model => model.FirstInsta)/-</td>
                                <td class="text-danger">@Html.DisplayFor(model => model.FirstDate)</td>
                            </tr>
                            <tr>
                                <td>Second</td>
                                <td class="text-success">@Html.DisplayFor(model => model.SecondInsta)/-</td>
                                <td class="text-danger">@Html.DisplayFor(model => model.SecondDate)</td>
                            </tr>
                            <tr>
                                <td>Third</td>
                                <td class="text-success">@Html.DisplayFor(model => model.Thirdinsta)/-</td>
                                <td class="text-danger">@Html.DisplayFor(model => model.ThirdDate)</td>
                            </tr>
                            <tr>
                                <td>Fourth</td>
                                <td class="text-success">@Html.DisplayFor(model => model.FourthInsta)/-</td>
                                <td class="text-danger">@Html.DisplayFor(model => model.FourthDate)</td>
                            </tr>
                            <tr>
                                <td>Fifth</td>
                                <td class="text-success">@Html.DisplayFor(model => model.FifthInsta)/-</td>
                                <td class="text-danger">@Html.DisplayFor(model => model.FifthDate)</td>
                            </tr>
                            <tr>
                                <td>Sixth</td>
                                <td class="text-success">@Html.DisplayFor(model => model.SixInsta)/-</td>
                                <td class="text-danger">@Html.DisplayFor(model => model.SixDate)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="form-group text-center mt-4">
            <a asp-controller="Admin" asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Admission" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
