@model InstitudeManagementSystem.Models.Course

@{
    ViewData["Title"] = "Delete";
}

<div class="card-header bg-danger text-white text-center">
    <h1 class="display-4 text-white" style="font-weight: 650;">DELETE</h1>
    <p class="text-white fw-bold">Are you sure you want to delete this course?</p>
</div>

<div class="d-flex justify-content-center mt-4">
    <div class="col-md-8">
        <h5 class="text-danger font-weight-bold mb-3 text-uppercase">Course Details</h5>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label fw-bold">Course Name</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.Name)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Front End</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.FrontEnd)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Back End</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.BackEnd)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Database Language</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.DataBaseLanguage)</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label fw-bold">Duration</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.Duration)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Course Fees</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.CourseFees)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Course Format</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.CourseFormat)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Description</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.Description)</p>
                </div>
            </div>
        </div>

        <div class="form-group text-center mt-4">
            <p class="text-danger fw-bold">Are you sure you want to delete this course?</p>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Cid" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="CourseTable" class="btn btn-secondary">Back</a>
            </form>
        </div>
    </div>
</div>
