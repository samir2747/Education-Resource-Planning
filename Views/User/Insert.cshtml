@model InstitudeManagementSystem.Models.Inquiry

@{
    ViewData["Title"] = "Insert";
}

<!-- Page Header -->
<div class="card-header bg-primary text-white text-center">
    <h1 class="display-4 text-white" style="font-weight: 650;">Insert Inquiry</h1>
    <p class="text-white fw-bold">Fill out the inquiry details and submit</p>
</div>

<div class="d-flex justify-content-center mt-5">
    <div class="col-md-8">
        <form asp-action="Insert">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

            <!-- PERSONAL INFORMATION SECTION -->
            <h5 class="text-primary font-weight-bold mb-3 text-uppercase">Personal Information</h5>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label fw-bold">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter your name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Gender" class="control-label fw-bold">Gender</label>
                        <select asp-for="Gender" class="form-control">
                            <option value="">-- Select Gender --</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Contact" class="control-label fw-bold">Contact</label>
                        <input asp-for="Contact" class="form-control" placeholder="Enter contact number" />
                        <span asp-validation-for="Contact" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="control-label fw-bold">Email</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="Enter email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Address" class="control-label fw-bold">Address</label>
                        <textarea asp-for="Address" class="form-control" rows="3" placeholder="Enter your address"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="City" class="control-label fw-bold">City</label>
                        <input asp-for="City" class="form-control" placeholder="Enter city" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Dob" class="control-label fw-bold">Date of Birth</label>
                        <input asp-for="Dob" type="date" class="form-control" />
                        <span asp-validation-for="Dob" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- EDUCATION AND COURSE DETAILS SECTION -->
            <h5 class="text-primary font-weight-bold mt-5 mb-3 text-uppercase">Education & Course Details</h5>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Qualification" class="control-label fw-bold">Qualification</label>
                        <select asp-for="Qualification" class="form-control">
                            <option value="">Select Qualification</option>
                            <option value="HighSchool">High School</option>
                            <option value="BSc">B.Sc. (Bachelor of Science)</option>
                            <option value="BA">B.A. (Bachelor of Arts)</option>
                            <option value="BCom">B.Com (Bachelor of Commerce)</option>
                            <option value="BCA">BCA (Bachelor of Computer Applications)</option>
                            <option value="MSc">M.Sc. (Master of Science)</option>
                            <option value="MA">M.A. (Master of Arts)</option>
                            <option value="MCom">M.Com (Master of Commerce)</option>
                            <option value="MCA">MCA (Master of Computer Applications)</option>
                            <option value="PhD">Ph.D. (Doctor of Philosophy)</option>
                            <option value="Diploma">Diploma</option>
                        </select>
                        <span asp-validation-for="Qualification" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Course" class="control-label fw-bold">Course</label>
                        <select asp-for="Course" class="form-select" asp-items="ViewBag.Courses">
                            <option value="">--Select Course--</option>
                        </select>
                        <span asp-validation-for="Course" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Fees" class="control-label fw-bold">Fees</label>
                        <input asp-for="Fees" type="number" class="form-control" placeholder="Enter course fees" />
                        <span asp-validation-for="Fees" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Remark" class="control-label fw-bold">Remarks</label>
                        <textarea asp-for="Remark" class="form-control" rows="2" placeholder="Enter remarks"></textarea>
                        <span asp-validation-for="Remark" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- INQUIRY DETAILS SECTION -->
            <h5 class="text-primary font-weight-bold mt-5 mb-3 text-uppercase">Inquiry Details</h5>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="InquiryTakenBy" class="control-label fw-bold">Inquiry Taken By</label>
                        <input asp-for="InquiryTakenBy" class="form-control" placeholder="Enter your name" />
                        <span asp-validation-for="InquiryTakenBy" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- BUTTON SECTION -->
            <div class="form-group text-center mt-4">
                <button type="submit" class="btn btn-success">Submit</button>
                <a asp-action="Table" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>
