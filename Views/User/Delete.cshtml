@model InstitudeManagementSystem.Models.Inquiry

@{
    ViewData["Title"] = "Delete Inquiry";
}

<div class="card-header bg-danger text-white text-center">
    <h1 class="display-4 text-white" style="font-weight: 650;">DELETE</h1>
    <p class="text-white fw-bold">Are you sure you want to delete this inquiry?</p>
</div>

<div class="d-flex justify-content-center mt-4">
    <div class="col-md-8">
        <h5 class="text-danger font-weight-bold mb-3 text-uppercase">Inquiry Details</h5>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label fw-bold">Name</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.Name)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Contact</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.Contact)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Address</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.Address)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">City</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.City)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Date of Birth</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.Dob)</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label fw-bold">Qualification</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.Qualification)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Email</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.Email)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Course Interested</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.Course)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Fees</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.Fees)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Remark</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.Remark)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Inquiry Taken By</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.InquiryTakenBy)</p>
                </div>
            </div>
        </div>

        <div class="form-group text-center mt-4">
            <p class="text-danger fw-bold">Are you sure you want to delete this inquiry?</p>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
                <a asp-action="Table" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
