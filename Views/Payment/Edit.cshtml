@model InstitudeManagementSystem.Models.Payment

@{
    ViewData["Title"] = "Edit";
}

<div class="card-header bg-warning text-white text-center">
    <h1 class="display-4 text-dark" style="font-weight: 650;">UPDATE</h1>
    <p class="text-dark fw-bold">Update and Refresh Your Info</p>
</div>

<div class="d-flex justify-content-center mt-4">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Pid" />

            <!-- STUDENT INFORMATION SECTION -->
            <h5 class="text-warning font-weight-bold mb-3 text-uppercase">Student Information</h5>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="StudentName" class="control-label fw-bold"></label>
                        <input asp-for="StudentName" class="form-control" />
                        <span asp-validation-for="StudentName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StudentId" class="control-label fw-bold"></label>
                        <input asp-for="StudentId" class="form-control" />
                        <span asp-validation-for="StudentId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MobileNo" class="control-label fw-bold"></label>
                        <input asp-for="MobileNo" class="form-control" />
                        <span asp-validation-for="MobileNo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Gmail" class="control-label fw-bold"></label>
                        <input asp-for="Gmail" class="form-control" />
                        <span asp-validation-for="Gmail" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ParentName" class="control-label fw-bold"></label>
                        <input asp-for="ParentName" class="form-control" />
                        <span asp-validation-for="ParentName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CourseName" class="control-label fw-bold"></label>
                        <input asp-for="CourseName" class="form-control" />
                        <span asp-validation-for="CourseName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ReceiptDate" class="control-label fw-bold"></label>
                        <input asp-for="ReceiptDate" class="form-control" />
                        <span asp-validation-for="ReceiptDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ReceiptNo" class="control-label fw-bold"></label>
                        <input asp-for="ReceiptNo" class="form-control" />
                        <span asp-validation-for="ReceiptNo" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- PAYMENT DETAILS SECTION -->
            <h5 class="text-warning font-weight-bold mt-5 mb-3 text-uppercase">Payment Details</h5>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FeesStatus" class="control-label fw-bold"></label>
                        <input asp-for="FeesStatus" class="form-control" />
                        <span asp-validation-for="FeesStatus" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ReceivedAmount" class="control-label fw-bold"></label>
                        <input asp-for="ReceivedAmount" class="form-control" />
                        <span asp-validation-for="ReceivedAmount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ReceivedMode" class="control-label fw-bold"></label>
                        <input asp-for="ReceivedMode" class="form-control" />
                        <span asp-validation-for="ReceivedMode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TransactionStatus" class="control-label fw-bold"></label>
                        <input asp-for="TransactionStatus" class="form-control" />
                        <span asp-validation-for="TransactionStatus" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="TransactionNumber" class="control-label fw-bold"></label>
                        <input asp-for="TransactionNumber" class="form-control" />
                        <span asp-validation-for="TransactionNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Narration" class="control-label fw-bold"></label>
                        <input asp-for="Narration" class="form-control" />
                        <span asp-validation-for="Narration" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ReceivedBy" class="control-label fw-bold"></label>
                        <input asp-for="ReceivedBy" class="form-control" />
                        <span asp-validation-for="ReceivedBy" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TermCondition" class="control-label fw-bold"></label>
                        <input asp-for="TermCondition" class="form-control" />
                        <span asp-validation-for="TermCondition" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ReceiptRemark" class="control-label fw-bold"></label>
                        <input asp-for="ReceiptRemark" class="form-control" />
                        <span asp-validation-for="ReceiptRemark" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="TransactionDate" class="control-label fw-bold"></label>
                        <input asp-for="TransactionDate" class="form-control" />
                        <span asp-validation-for="TransactionDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Button -->
            <div class="form-group text-center mt-4">
                <input type="submit" value="SUBMIT" class="btn btn-warning" />
                <a asp-action="Payment" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>
