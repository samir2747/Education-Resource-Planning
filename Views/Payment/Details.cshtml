@model InstitudeManagementSystem.Models.Payment

@{
    ViewData["Title"] = "Details";
}

<div class="card-header bg-success text-white text-center">
    <h1 class="display-4 text-white" style="font-weight: 650;">DETAILS</h1>
    <p class="text-white fw-bold">View and Confirm Your Information</p>
</div>

<div class="d-flex justify-content-center mt-4">
    <div class="col-md-8">
        <h5 class="text-success font-weight-bold mb-3 text-uppercase">Student Information</h5>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label fw-bold">Student Name</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.StudentName)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Mobile No</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.MobileNo)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Gmail</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.Gmail)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Parent Name</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.ParentName)</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label fw-bold">Course Name</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.CourseName)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Receipt Date</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.ReceiptDate)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Receipt No</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.ReceiptNo)</p>
                </div>
            </div>
        </div>

        <h5 class="text-success font-weight-bold mt-5 mb-3 text-uppercase">Payment Details</h5>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label fw-bold">Fees Status</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.FeesStatus)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Received Amount</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.ReceivedAmount)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Received Mode</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.ReceivedMode)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Transaction Status</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.TransactionStatus)</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label fw-bold">Transaction Number</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.TransactionNumber)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Narration</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.Narration)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Received By</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.ReceivedBy)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Term Condition</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.TermCondition)</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label fw-bold">Receipt Remark</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.ReceiptRemark)</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label fw-bold">Transaction Date</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.TransactionDate)</p>
                </div>
            </div>
        </div>

        <div class="form-group text-center mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.Pid" class="btn btn-success">Edit</a>
            <a asp-action="Payment" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
