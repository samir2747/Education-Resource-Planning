@model InstitudeManagementSystem.Models.Employee

@{
    ViewData["Title"] = "Add Employee";
}

<!-- Page Header -->
<div class="card-header bg-primary text-white text-center">
    <h1 class="display-4 text-white" style="font-weight: 650;">Add Employee</h1>
    <p class="text-white fw-bold">Fill out the employee details and submit</p>
</div>

<!-- Main Form Container -->
<div class="d-flex justify-content-center mt-5">
    <div class="col-md-8">
        <form asp-action="AddEmp">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

            <!-- PERSONAL INFORMATION SECTION -->
            <h5 class="text-primary font-weight-bold mb-3 text-uppercase">Personal Information</h5>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label fw-bold">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Gender" class="control-label fw-bold">Gender</label>
                        <select asp-for="Gender" class="form-control" >
                            <option value="">-- Select Gender --</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="control-label fw-bold">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter Email"  />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="ContactNo" class="control-label fw-bold">Contact Number</label>
                        <input asp-for="ContactNo" class="form-control" placeholder="Enter Contact Number" />
                        <span asp-validation-for="ContactNo" class="text-danger"></span>
                    </div>
                    
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="AlternetContactNo" class="control-label fw-bold">Alternate Contact No</label>
                        <input asp-for="AlternetContactNo" class="form-control" placeholder="Enter Alternate Contact Number"  />
                        <span asp-validation-for="AlternetContactNo" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Dob" class="control-label fw-bold">Date of Birth</label>
                        <input asp-for="Dob" type="date" class="form-control"  />
                        <span asp-validation-for="Dob" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="CurrentAddress" class="control-label fw-bold">Current Address</label>
                        <input asp-for="CurrentAddress" class="form-control" placeholder="Enter Current Address" />
                        <span asp-validation-for="CurrentAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="PermanentAddress" class="control-label fw-bold">Permanent Address</label>
                        <input asp-for="PermanentAddress" class="form-control" placeholder="Enter Permanent Address"  />
                        <span asp-validation-for="PermanentAddress" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- JOB INFORMATION SECTION -->
            <h5 class="text-primary font-weight-bold mt-5 mb-3 text-uppercase">Job Information</h5>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Qualification" class="control-label fw-bold">Qualification</label>
                        <select asp-for="Qualification" class="form-control">
                            <option value="">Select Qualification</option>
                            <option value="HighSchool">High School</option>
                            <option value="BSc">B.Sc. (Bachelor of Science)</option>
                            <option value="BA">B.A. (Bachelor of Arts)</option>
                            <option value="BCom">B.Com (Bachelor of Commerce)</option>
                            <option value="BCA">BCA (Bachelor of Computer Applications)</option>
                            <option value="MSc">M.Sc. (Master of Science)</option>
                            <option value="MA">M.A. (Master of Arts)</option>
                            <option value="MCom">M.Com (Master of Commerce)</option>
                            <option value="MCA">MCA (Master of Computer Applications)</option>
                            <option value="PhD">Ph.D. (Doctor of Philosophy)</option>
                            <option value="Diploma">Diploma</option>
                        </select>
                        <span asp-validation-for="Qualification" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="MaritalStatus" class="control-label fw-bold">Marital Status</label>
                        <input asp-for="MaritalStatus" class="form-control" placeholder="Enter Marital Status"/>
                        <span asp-validation-for="MaritalStatus" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Department" class="control-label fw-bold">Department</label>
                        <input asp-for="Department" class="form-control" placeholder="Enter Department" />
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div></div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="SpecializedSubject" class="control-label fw-bold">Specialized Subject</label>
                        <input asp-for="SpecializedSubject" class="form-control" placeholder="Enter Specialized Subject" />
                        <span asp-validation-for="SpecializedSubject" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Designation" class="control-label fw-bold">Designation</label>
                        <input asp-for="Designation" class="form-control" placeholder="Enter Designation" />
                        <span asp-validation-for="Designation" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="DateOfJoining" class="control-label fw-bold">Date of Joining</label>
                        <input asp-for="DateOfJoining" type="date" class="form-control" />
                        <span asp-validation-for="DateOfJoining" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- SALARY AND ID PROOF SECTION -->
            <h5 class="text-primary font-weight-bold mt-5 mb-3 text-uppercase">Salary & ID Proof</h5>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Salary" class="control-label fw-bold">Salary</label>
                        <input asp-for="Salary" class="form-control" placeholder="Enter Salary"  />
                        <span asp-validation-for="Salary" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="IdproofType" class="control-label fw-bold">ID Proof Type</label>
                        <select asp-for="IdproofType" class="form-control" >
                            <option value="">-- Select ID Proof Type --</option>
                            <option value="Aadharcard">Aadhar Card</option>
                            <option value="Pan card">Pan Card</option>
                        </select>
                        <span asp-validation-for="IdproofType" class="text-danger"></span>
                    </div></div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="IdproofNumber" class="control-label fw-bold">ID Proof Number</label>
                        <input asp-for="IdproofNumber" class="form-control" placeholder="Enter ID Proof Number"  />
                        <span asp-validation-for="IdproofNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- STATUS AND EXPERIENCE SECTION -->
            <h5 class="text-primary font-weight-bold mt-5 mb-3 text-uppercase">Status & Experience</h5>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Status" class="control-label fw-bold">Status</label>
                        <input asp-for="Status" class="form-control" placeholder="Enter Status" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="PreviousExperience" class="control-label fw-bold">Previous Experience</label>
                        <input asp-for="PreviousExperience" class="form-control" placeholder="Enter Previous Experience"  />
                        <span asp-validation-for="PreviousExperience" class="text-danger"></span>
                    </div></div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Experience" class="control-label fw-bold">Experience</label>
                        <input asp-for="Experience" class="form-control" placeholder="Enter Experience"  />
                        <span asp-validation-for="Experience" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="form-group text-center mt-5">
                <button type="submit" class="btn btn-success px-4 py-2">Submit</button>
                <a asp-action="Employee" asp-controller="Employee" class="btn btn-secondary px-4 py-2 ms-3">Back to Page</a>
            </div>
        </form>
    </div>
</div>
