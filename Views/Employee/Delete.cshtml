@model InstitudeManagementSystem.Models.Employee

@{
    ViewData["Title"] = "Delete";
}

<div class="card-header bg-danger text-white text-center">
    <h1 class="display-4 text-white" style="font-weight: 650;">DELETE</h1>
    <p class="text-white fw-bold">Are you sure you want to delete this employee?</p>
</div>

<div class="d-flex justify-content-center mt-4">
    <div class="col-md-8">
        <h5 class="text-danger font-weight-bold mb-3 text-uppercase">Employee Details</h5>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label fw-bold">Employee Name</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.Name)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Gender</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.Gender)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Email</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.Email)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Contact No</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.ContactNo)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Alternate Contact No</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.AlternetContactNo)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Current Address</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.CurrentAddress)</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label fw-bold">Permanent Address</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.PermanentAddress)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Date of Birth</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.Dob)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Qualification</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.Qualification)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Marital Status</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.MaritalStatus)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Department</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.Department)</p>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Specialized Subject</label>
                    <p class="form-control-static">@Html.DisplayFor(model => model.SpecializedSubject)</p>
                </div>
            </div>
        </div>

        <div class="form-group text-center mt-4">
            <p class="text-danger fw-bold">Are you sure you want to delete this employee?</p>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Eid" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Employee" class="btn btn-secondary">Back</a>
            </form>
        </div>
    </div>
</div>
